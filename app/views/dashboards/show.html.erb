<div class="box col-10 offset-1">
  <h1 class="text-center">What I'm Learning!</h1>
  <br/>
  <hr />
  <br />
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-fluid center-block' %>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8 offset-1"> 
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-2 text-center">
        <%= link_to "More info...", course_path(course), class: 'btn btn-primary' %>
      </div>
    </div>
    <hr class="col-8 offset-2">
    <br class= "clr" />
  <% end %>

